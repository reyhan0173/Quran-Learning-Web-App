<!DOCTYPE html>
<html>
  <head>
    <title>Quran App Test</title>
    <link rel="stylesheet" href="main.css" />
    <script src="/audioPlayer.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>

  <body>
    <header></header>
    <main>
      <%- ayaHtml %>
      <div class="audio-player">
        <audio
          id="audioPlayer"
          data-loop="true"
          prev_src_ayah=""
          prev_src_recitor=""
          src=""
          prev_ayah=""
          prev_recitor=""
          controls
        >
          <source src type="audio/mpeg" />
          Your browser does not support the audio element.
        </audio>
        

        <div class="players">
          <div class="single-player">
            <button id="up-arrow" class="player-up-icon icon-Btn" onclick="toggleAyahList()">
              <i class="fa fa-chevron-up up-icon"></i>
            </button>

            <div class="single-player-2">
              <div id="ayah-list" class="ayah-list hidden">
                <!-- Ayah summary list goes here -->
                <div class="ayah-summary">
                  <div class="ayah-list-num">Ayah</div>
                  <div class="ayah-list-loop">Count</div>
                </div>

                <div class="ayah-summary">
                  <div class="ayah-list-num">2:20</div>
                  <div class="ayah-list-loop">0/10</div>
                </div>
              </div>

              <input type="range" id="seekBar" value="0" />

              <div class="timeRange">
                <div class="currentTime" id="currentTime">0:00</div>

                <button
                  id="playPauseBtn"
                  class="playPauseBtn icon-Btn"
                  disabled
                >
                  <i class="fa fa-play play-icon"></i>
                </button>

                <div class="totalDuration" id="totalDuration">0:00</div>
              </div>
            </div>
          </div>
        </div>

        <div class="players">
          <div class="single-player">

            <div class="single-player-2">
              <div class="timeRange">
                <button id="ellipsisBtn" class="ellipsisBtn icon-Btn">
                  <i class="fa fa-ellipsis-h ellipsisBtn-icon"></i>
                </button>

                <button id="recordBtn" class="recordBtn icon-Btn">
                  <i class="fa fa-microphone play-icon"></i>
                </button>

                <button id="recordPauseBtn" class="recordPauseBtn icon-Btn">
                  <i class="fa fa-pause recordPauseBtn-icon"></i>
                </button>

                <button id="recordStopBtn" class="recordStopBtn icon-Btn">
                  <i class="fa fa-stop recordStopBtn-icon"></i>
                </button>

                <button id="recordSubmitBtn" class="recordSubmitBtn icon-Btn">
                  <i class="fa fa-check recordSubmitBtn-icon"></i>
                </button>
              </div>
            </div>

            <button id="up-arrow" class="icon-Btn">
              <i class="fa fa-chevron-up up-icon"></i>
            </button>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
